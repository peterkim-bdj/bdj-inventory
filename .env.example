# Database (PostgreSQL) - used by PrismaPg adapter at runtime
# For docker-compose.dev.yml: postgresql://postgres:postgres@localhost:5432/bdj_inventory
# For docker-compose.yml (app container): postgresql://postgres:postgres@db:5432/bdj_inventory
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bdj_inventory"

# Shopify API (per store - configure in app UI)
# Access tokens are stored in DB per ShopifyStore record

# Auth (Auth.js v5)
AUTH_SECRET="generate-with-npx-auth-secret"
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"
